<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/currentCard"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/current_parking_title"
                    android:textSize="24sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/currentPhoto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                card_view:srcCompat="@android:drawable/ic_lock_lock" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cityCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CityPlaceholder"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dateCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DataPlaceholder"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/addressCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AddressPlaceholder"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>
</LinearLayout>